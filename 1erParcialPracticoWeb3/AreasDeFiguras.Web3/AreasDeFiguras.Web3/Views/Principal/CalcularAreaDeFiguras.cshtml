@model RectanguloModel
<h3>Calculador de Áreas de Figuras Rectángulos en metros</h3>
<form action="/Principal/CalcularAreaDeFiguras" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.baseFigura)
        @Html.TextBoxFor(model => model.baseFigura, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(model => model.baseFigura, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.alturaFigura)
        @Html.TextBoxFor(model => model.alturaFigura, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(model => model.alturaFigura, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Calcular</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
